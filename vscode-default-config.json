{
	"explorer.sortOrder": "type",
	"explorer.compactFolders": false,

	"editor.fontFamily": "'JetBrains Mono Regular', Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.fontWeight": "500",
	"editor.fontLigatures": true,
	"editor.lineHeight": 30,
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "phase",
	"editor.cursorWidth": 3,
	"editor.tabSize": 2,

	"prettier.printWidth": 110,
	"prettier.singleQuote": true,
	"prettier.tabWidth": 2,
	"prettier.useTabs": true,
	"prettier.trailingComma": "none",
	"prettier.semi": false,

	"deno.enable": true,
	"deno.import_intellisense_origins": { "https://deno.land": true },
	"deno.import_intellisense_autodiscovery": true,

	"rust.rustfmt_path": "~/.cargo/bin/rustfmt",

	"[rust]": { "editor.defaultFormatter": "rust-lang.rust" },
	"[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[json]": {
		"editor.quickSuggestions": { "strings": true },
		"editor.suggest.insertMode": "replace",
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[scss]": { "editor.suggest.insertMode": "replace", "editor.defaultFormatter": "esbenp.prettier-vscode" }
}
